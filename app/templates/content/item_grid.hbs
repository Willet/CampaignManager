<div class="content-type">
  {{#is type 'video'}}
  <i class="icon-general-video"></i>
  {{/is}}
</div>
<div class="content-image" style="background-image: url('{{images.medium.url}}{{video-thumbnail}}');">
</div>
<div class="content-actions">
  {{#is status 'approved'}}
  <button class="tag-content-button js-content-edit">
    Tag  <!-- TODO add icon -->
  </button>
  {{/is}}
  {{#isnt status 'approved'}}
  <button class="approve-tag-content-button js-content-approve-edit">
    Approve & tag
  </button>
  <button class="approve-content-button js-content-approve">
    Approve <i class="icon-general-checkmark"></i>
  </button>
  {{/isnt}}
  {{#isnt status 'rejected'}}
  <button class="reject-content-button js-content-reject">
    Reject <i class="icon-general-remove"></i>
  </button>
  {{/isnt}}
  <button class="preview-content-button js-content-preview">
    Preview <i class="icon-accessibility-eyeball"></i>
  </button>
</div>
<div class="content-state content-state-{{status}}">
  {{titleize status}}
</div>