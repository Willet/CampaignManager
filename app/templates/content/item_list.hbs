<div class="content-image">
  <img src="{{images.medium.url}}{{video-thumbnail}}"/>
</div>
<div class="content-info">
  <label for="source" class="inline">Source</label>
  <div class="content-source">
    {{#is source 'facebook'}}
    <i class="icon-social-facebook"></i> Facebook
    {{/is}}
    {{#is source 'instagram'}}
    <i class="icon-social-instagram"></i> Instagram
    {{/is}}
    {{#is source 'youtube'}}
    <i class="icon-social-youtube"></i> Youtube
    {{/is}}
  </div>
  <label for="caption" class="inline">Caption</label>
  <p class="caption">{{default caption "(No Caption)"}}</p>
  <div class="content-actions">
  {{#isnt state 'approved'}}
  <button class="approve-content-button js-content-approve">
    Approve <i class="icon-general-checkmark"></i>
  </button>
  {{/isnt}}
  {{#isnt state 'rejected'}}
  <button class="reject-content-button js-content-reject">
    Reject <i class="icon-general-remove"></i>
  </button>
  {{/isnt}}
  <button class="preview-content-button js-content-preview">
    Preview <i class="icon-accessibility-eyeball"></i>
  </button>
  </div>
</div>