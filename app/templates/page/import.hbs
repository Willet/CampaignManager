<div class="content">
  <h4>Add Product Source</h4>
  <div class="add-products">
    <div class="row">
      <label class="large-2 columns inline">Add by URL</label>
      <span class="large-8 columns">
        <input id="url" type="text" placeholder="http://..." />
      </span>
      <span class="large-2 columns text-left">
        <a href="#" id="add-url" class="small button">Add</a>
      </span>
    </div>
    <div class="row">
      <label class="large-2 columns inline">Add by Search</label>
      <span class="large-8 columns">
        <input id="search-product" type="text" placeholder="Search by product or category" />
      </span>
      <span class="large-2 columns text-left">
        <a href="#" id="add-product" class="small button">Add</a>
      </span>
    </div>
    <div class="row">
      <h4>Product Sources</h4>
      <div class="sources">

        <div class="row item">
          <div class="large-6 columns details">
            <span class="title">
              <b>Title:</b>
              {{default source.page_title "(pending)"}}
            </span><br />
            <span class="link" title="{{source.url}}">
              <b>URL:</b>
              <a href="{{source.url}}" target="_blank">{{source.url}}</a>
            </span>
          </div>
          <div class="large-2 columns text-center status-{{source.status}}">
            {{default source.status 'Fetching'}}
          </div>
          <div class="large-4 columns text-right action">
            <a href="#" class="remove">Remove</a>
          </div>
        </div>

        <div class="row item">
          <div class="large-6 columns details">
            <span class="title">
              <b>Search:</b>
              {{ source.search}}
            </span><br />
          </div>
          <div class="large-2 columns text-center status-{{source.status}}">
            {{default source.status 'Fetching'}}
          </div>
          <div class="large-4 columns text-right action">
            <a href="#" class="remove">Remove</a>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>