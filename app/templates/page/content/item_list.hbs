<div class="content-type">
  {{#is type 'video'}}
  <i class="icon-general-video"></i>
  {{/is}}
</div>
<div class="content-image">
  <img src="{{images.medium.url}}{{video-thumbnail}}"/>
</div>
<div class="content-info">
  <label for="source" class="inline">Source</label>
  <div class="content-source">
    {{#is source 'facebook'}}
    <i class="icon-social-facebook"></i> Facebook
    {{/is}}
    {{#is source 'instagram'}}
    <i class="icon-social-instagram"></i> Instagram
    {{/is}}
    {{#is source 'youtube'}}
    <i class="icon-social-youtube"></i> Youtube
    {{/is}}
  </div>
  <label for="caption" class="inline">Caption</label>
  <p class="caption">{{default caption "(No Caption)"}}</p>
  <div class="content-actions">
    {{#is page-status 'added'}}
    <button class="remove-content-button js-content-remove">
      Remove <i class="icon-general-error"></i>
    </button>
    {{else}}
    <button class="add-content-button js-content-add">
      Add <i class="icon-general-checkmark"></i>
    </button>
    {{/is}}
    {{#if page-prioritized}}
    <button class="deprioritize-content-button js-content-deprioritize">
      Deprioritize <i class="icon-general-down-arrow"></i>
    </button>
    {{else}}
    <button class="prioritize-content-button js-content-prioritize">
      Prioritize <i class="icon-general-up-arrow"></i>
    </button>
    {{/if}}
    <button class="preview-content-button js-content-preview">
      Preview <i class="icon-accessibility-eyeball"></i>
    </button>
  </div>
</div>
{{#is page-status 'added'}}
  {{#if page-prioritized}}
      <div class="content-state content-state-prioritized">
        Prioritized <i class="icon-general-up-arrow"></i>
      </div>
    {{else}}
      <div class="content-state content-state-added">
        Added <i class="icon-general-checkmark"></i>
      </div>
    {{/if}}
{{/is}}